# Daily Minutes Configuration Example
# Copy this to .env and customize

# === MCP Server Refresh Intervals (minutes) ===
SCHEDULER_EMAIL_REFRESH_INTERVAL=60
SCHEDULER_CALENDAR_REFRESH_INTERVAL=60
SCHEDULER_NEWS_REFRESH_INTERVAL=60
SCHEDULER_WEATHER_REFRESH_INTERVAL=60

# === AI Brief Generation (minutes) ===
SCHEDULER_BRIEF_GENERATION_INTERVAL=5
SCHEDULER_BRIEF_ONLY_ON_NEW_DATA=true
SCHEDULER_BRIEF_MIN_ITEMS=1

# === UI Auto-Refresh (seconds) ===
SCHEDULER_UI_INITIAL_LOAD_DELAY=60
SCHEDULER_UI_REFRESH_INTERVAL=300

# === Cache Settings ===
SCHEDULER_CACHE_EXPIRY_HOURS=1

# === Feature Toggles ===
SCHEDULER_ENABLE_BACKGROUND_SCHEDULER=true
SCHEDULER_ENABLE_EMAIL_SYNC=true
SCHEDULER_ENABLE_CALENDAR_SYNC=true
SCHEDULER_ENABLE_NEWS_SYNC=true
SCHEDULER_ENABLE_WEATHER_SYNC=true
SCHEDULER_ENABLE_AUTO_BRIEF=true

# === OpenAI/LLM Settings ===
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# === Langfuse Observability (Optional) ===
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com
